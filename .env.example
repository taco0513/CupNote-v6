# ============================================================================
# CupNote v6 Environment Configuration Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ============================================================================
# Supabase Configuration
# ============================================================================
# Required: Get these from your Supabase project settings > API
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Optional: For server-side operations (Edge Functions, etc.)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# App Configuration
# ============================================================================
# App environment
APP_ENV=development
APP_VERSION=6.0.0
APP_BUILD_NUMBER=1

# Feature flags
FEATURE_ACHIEVEMENTS_ENABLED=true
FEATURE_COMMUNITY_MATCH_ENABLED=true
FEATURE_REAL_TIME_SYNC_ENABLED=true
FEATURE_OFFLINE_MODE_ENABLED=true
FEATURE_DEBUG_MODE_ENABLED=true

# ============================================================================
# Performance & Caching
# ============================================================================
# Cache configuration
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE_MB=50
ENABLE_PERSISTENT_CACHE=true

# Pagination defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================================================
# Korean Localization
# ============================================================================
# Default language and locale
DEFAULT_LANGUAGE=ko
DEFAULT_LOCALE=ko-KR
TIMEZONE=Asia/Seoul

# ============================================================================
# Development & Debugging
# ============================================================================
# Debug settings
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_REDUX_DEVTOOLS=true
ENABLE_FLIPPER=true

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# ============================================================================
# Security Configuration
# ============================================================================
# Session management
SESSION_TIMEOUT_HOURS=24
REFRESH_TOKEN_THRESHOLD_MINUTES=5

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=60
ACHIEVEMENT_CHECK_COOLDOWN_SECONDS=5

# Privacy settings
ANALYTICS_ENABLED=false
CRASH_REPORTING_ENABLED=false
TELEMETRY_ENABLED=false

# ============================================================================
# External Services (Optional)
# ============================================================================
# Push notifications (if implemented)
# FCM_SERVER_KEY=your-firebase-server-key
# APN_KEY_ID=your-apple-push-key-id

# Image storage (Supabase Storage is used by default)
# CDN_BASE_URL=https://your-cdn-domain.com

# Maps service (for cafe locations)
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# NAVER_MAPS_API_KEY=your-naver-maps-key

# ============================================================================
# Testing Configuration
# ============================================================================
# Test database (for E2E testing)
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-anon-key

# Mock services
ENABLE_MOCK_SERVICES=false
MOCK_DELAY_MS=500

# ============================================================================
# Build Configuration
# ============================================================================
# Metro bundler
METRO_MAX_WORKERS=4
METRO_CACHE_ENABLED=true

# Build optimization
HERMES_ENABLED=true
PROGUARD_ENABLED=true
FLIPPER_VERSION=0.182.0

# ============================================================================
# Monitoring & Analytics
# ============================================================================
# Error tracking
# SENTRY_DSN=your-sentry-dsn
# BUGSNAG_API_KEY=your-bugsnag-key

# Analytics
# MIXPANEL_TOKEN=your-mixpanel-token
# AMPLITUDE_API_KEY=your-amplitude-key

# ============================================================================
# Database Configuration
# ============================================================================
# Connection pooling
DB_POOL_SIZE=10
DB_TIMEOUT_SECONDS=30

# Migration settings
AUTO_MIGRATE=true
MIGRATION_TIMEOUT_SECONDS=60

# Backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Regional Settings (Korea-specific)
# ============================================================================
# Currency
DEFAULT_CURRENCY=KRW
CURRENCY_FORMAT=korean

# Phone number format
PHONE_COUNTRY_CODE=+82
PHONE_FORMAT=korean

# Address format
ADDRESS_FORMAT=korean
POSTAL_CODE_FORMAT=korean

# ============================================================================
# Development URLs
# ============================================================================
# For local development
DEV_SERVER_URL=http://localhost:3000
API_BASE_URL=https://your-project-id.supabase.co/rest/v1

# Admin panel (if implemented)
ADMIN_PANEL_URL=https://your-project-id.supabase.co

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit actual secrets to version control
# 2. Use different values for development, staging, and production
# 3. Rotate keys regularly for security
# 4. Keep this file updated with any new environment variables
# 5. Document any custom configuration in your team wiki